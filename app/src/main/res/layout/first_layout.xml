<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="81dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/editText" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false" android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/add" android:layout_marginRight="75dp"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/add" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"/>
</RelativeLayout>